@using Project.Models;
@model IEnumerable<Repository>

@{
    ViewBag.Title = "ShowBookedRep";
}

<h2>My Repositories</h2>

@* checking if the list is empty *@
@* if the list contains data it will be printed  *@
@if (Model.Count() != 0)
{

        <div class="flex_display">
            @foreach (var item in Model)
            {



            <div class="gallery_item" id="gallery_item">
                <div class="gallery_item_avatar">
                    <img src="@item.Avatar">
                </div>
                <div class="item_data">
                    <p>
                        @item.Id
                    </p>
                    <br />
                    <p>
                        @item.Name
                    </p>
                </div>


            </div>


            }
        </div>
}
else
{
    <p>No booked repositories</p>
}

<link href="~/Content/index.css" rel="stylesheet" />